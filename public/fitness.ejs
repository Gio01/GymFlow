            <script>


                // Your web app's Firebase configuration
		    var firebaseConfig = "./scripts/firebase_config.json";
                // Initialize Firebase
                firebase.initializeApp(firebaseConfig);

                // Make auth and firestore references!
                const auth = firebase.auth();
                const db = firebase.firestore();

                //logout method
                const logout = document.querySelector("#logout");
                logout.addEventListener('click', (e) => {
                    e.preventDefault();
                    auth.signOut()
                })


                auth.onAuthStateChanged(user => {
                    //if user is logged in then show data & if not then don't show anything
                    if (user) {

                        setupUI(user)



                        const workForm = document.querySelector('.workout-form');
                        const esearch = document.querySelector('.esearch');


                        workForm.addEventListener('submit', (e) => {
                            //we want to stop the default submit settings of refreshing the
                            //page

                            e.preventDefault();//prevents the auto refresh!
                            console.log(user.uid);
                            console.log(workForm['ExerciseName'].value);

                            db.collection('users').doc(user.uid).collection('exercises').add({
                                exercise: workForm['ExerciseName'].value,
                                sets: workForm['NumSets'].value,
                                reps: workForm['NumReps'].value,
                                weight: workForm['WeightUsed'].value,
                                createdAt: firebase.firestore.FieldValue.serverTimestamp()

                            })
                            // we are creating the id of thr doc to be the uid from Firebase Auth
                        });

                        const exercise = document.querySelector('#userExercises');
                        esearch.addEventListener('submit', (e) => {
                            e.preventDefault();

                            db.collection('users').doc(user.uid).collection('exercises').get().then(data => {


                                data.forEach(doc => {

                                    const e = `< div > Exercise: ${doc.data().exercise} < br >
                        Sets: ${ doc.data().sets} < br >
                        Reps: ${ doc.data().reps} < br >
                        Weight: ${ doc.data().weight}
                                            </div >`
                                    exercise.innerHTML = e;

                                });


                            })



                        })

                    } else {
                        setupUI();
                    }

                });

